<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/gokfc"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/roundedbutton"
        android:gravity="center"
        android:text="Go"
        android:textColor="#fff"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.363"
        app:layout_constraintStart_toEndOf="@+id/kfcview"
        app:layout_constraintTop_toBottomOf="@+id/restaurant" android:layout_marginRight="4dp"/>

    <TextView
        android:id="@+id/restaurant"
        android:layout_width="256dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:imeOptions="actionNone"
        android:text="Restaurants"
        android:textAlignment="center"
        android:textColor="#651919"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/kfcview"
        android:layout_width="203dp"
        android:layout_height="204dp"
        android:layout_marginTop="15dp"
        android:background="#FAF8F8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.024"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restaurant"
        app:srcCompat="@drawable/kfc" />

    <ImageView
        android:id="@+id/macview"
        android:layout_width="207dp"
        android:layout_height="232dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.024"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grilview"
        app:srcCompat="@drawable/mac" />

    <ImageView
        android:id="@+id/grilview"
        android:layout_width="205dp"
        android:layout_height="206dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.024"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kfcview"
        app:srcCompat="@drawable/grill" />

    <Button
        android:id="@+id/gogril"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="164dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/roundedbutton"
        android:gravity="center"
        android:text="Go"
        android:textColor="#fff"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintStart_toEndOf="@+id/grilview"
        app:layout_constraintTop_toBottomOf="@+id/gokfc" android:layout_marginRight="40dp"/>

    <Button
        android:id="@+id/gomac"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="164dp"
        android:layout_marginEnd="64dp"
        android:background="@drawable/roundedbutton"
        android:gravity="center"
        android:text="Go"
        android:textColor="#fff"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/macview"
        app:layout_constraintTop_toBottomOf="@+id/gogril" android:layout_marginLeft="35dp"
        android:layout_marginRight="64dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>